<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.david.pokemoncalc.Home"
    tools:showIn="@layout/activity_home">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/RedBlueSprite"
        android:id="@+id/imageView"
        android:layout_marginBottom="97dp"
        android:layout_alignBottom="@+id/Calc"
        android:layout_alignRight="@+id/Calc"
        android:layout_alignEnd="@+id/Calc"
        android:layout_alignLeft="@+id/Calc"
        android:layout_alignStart="@+id/Calc" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:id="@+id/Calc"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/type"
        android:layout_alignLeft="@+id/type"
        android:layout_alignStart="@+id/type"
        android:layout_alignRight="@+id/type"
        android:layout_alignEnd="@+id/type" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type Comparer"
        android:id="@+id/type"
        android:layout_marginBottom="68dp"
        android:layout_above="@+id/credits"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credits"
        android:id="@+id/credits"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/type"
        android:layout_alignStart="@+id/type"
        android:layout_marginBottom="93dp"
        android:layout_alignRight="@+id/type"
        android:layout_alignEnd="@+id/type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="             Pokemon Calculator"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/Calc"
        android:layout_marginBottom="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
